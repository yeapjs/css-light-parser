{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ES2020",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "target": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./build",
    "rootDir": "./src",
    "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "types/*.d.ts"]
}
